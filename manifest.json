{
    "manifest_version": 3,
    "name": "YouTube Picture-in-Picture",
    "description": "Click to enable Picture-in-Picture on any YouTube video.",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_icon": {
        "16": "icons/pip-16.png",
        "48": "icons/pip-48.png",
        "128": "icons/pip-128.png"
      },
      "default_title": "Toggle YouTube PiP"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/pip-16.png",
      "48": "icons/pip-48.png",
      "128": "icons/pip-128.png"
    }
  }
  